<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <TextView
        android:id="@+id/prisoner_action_result"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        style="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tester_action_result"
        android:height="40dp" />
    <ProgressBar
        android:id="@+id/prisoner_result_progress_bar"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tester_result_progress_bar"
        />

    <ProgressBar
        android:id="@+id/tester_result_progress_bar"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/prisoner_result_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tester_action_result"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/prisoner_action_result"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextAppearance.AppCompat.Headline" />
</android.support.constraint.ConstraintLayout>